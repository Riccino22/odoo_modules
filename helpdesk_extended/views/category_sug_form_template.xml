<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="suggest">
            <t t-call="website.layout">
                <br />
                <div class="container text-center">
                    <center>
                        <form method="post" action="/category_suggest/send">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label>Your suggestion for category</label>
                                <input type="text" name="suggestion" class="form-control" required="true"/>
                                <small class="form-text text-muted">Insert your category suggest</small>
                            </div>
                            <div class="form-group">
                                <label>Category description</label>
                                <textarea class="form-control" name="description" required="true"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Suggest</button>
                        </form>
                    </center>
                </div>
            </t>

        </template>
    </data>
</odoo>